---
import Layout from "../layouts/Layout.astro";

---


<Layout title="Zonas Comunes">
    <main>
            <header class="page-header">
                <h1 class="header-title">Zonas Comunes</h1>
                <div class="filter-tabs">
                    <button class="filter-tab active" data-filter="todas">Todas</button>
                    <button class="filter-tab" data-filter="hall">Hall</button>
                    <button class="filter-tab" data-filter="piscina">Piscina</button>
                    <button class="filter-tab" data-filter="gimnasio">Gimnasio</button>
                </div>
            </header>

            <section class="gallery" id="gallery">
                <div class="gallery-item" data-category="hall">
                    <img src="/Hall-1.webp" alt="Hall 1" />
                </div>
                <div class="gallery-item" data-category="hall">
                    <img src="/Hall-2.webp" alt="Hall 2" />
                </div>
                <div class="gallery-item" data-category="piscina">
                    <img src="/Piscina-1.webp" alt="Piscina 1" />
                </div>
                <div class="gallery-item" data-category="gimnasio">
                    <img src="/Gym-1.webp" alt="Gimnasio 1" />
                </div>
            </section>

            <section class="mobile-gallery" id="mobile-gallery">
                <div class="gallery-item" data-category="hall">
                    <img src="/Hall-1.webp" alt="Hall 1" />
                </div>
                <div class="gallery-item" data-category="hall">
                    <img src="/Hall-2.webp" alt="Hall 2" />
                </div>
                <div class="gallery-item" data-category="piscina">
                    <img src="/Piscina-1.webp" alt="Piscina 1" />
                </div>
                <div class="gallery-item" data-category="gimnasio">
                    <img src="/Gym-1.webp" alt="Gimnasio 1" />
                </div>
            </section>
    </main>
</Layout>



<style>
body {
    overflow: hidden;
}

main {
    position: fixed;
    top: 0;
    left: 280px;
    width: calc(100vw - 280px);
    height: 100vh;
    overflow-y: auto;
    overflow-x: hidden;
    background-color: hsl(240, 15%, 17%);
    padding: 0;
    scroll-snap-type: y mandatory;
}

.header-title{
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0px 0;
    padding: 0;
    text-align: center;        
}

.content-container {
    padding: 40px;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
}

.page-header {
    position: fixed;
    /*top: 20px;*/
    left: 280px;
    right: 0;
    z-index: 10;
    text-align: center;
    padding: 20px;
    background: transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.filter-tabs {
    display: flex;
    gap: 8px;
    justify-content: center;
}

.filter-tab {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    background-color: hsl(240, 15%, 30%);
    color: white;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-tab:hover {
    background-color: hsl(240, 15%, 35%);
}

.filter-tab.active {
    background-color: hsl(230, 100%, 69%);
    color: white;
}

.gallery {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100%;
}

.gallery-item {
    width: 100%;
    height: 100vh;
    border-radius: 0;
    overflow: hidden;
    scroll-snap-align: start;
    flex-shrink: 0;
}

.gallery-item.hidden {
    display: none;
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    display: block;
    border-radius: 0;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
}

.mobile-gallery {
    display: none;
}

@media (orientation: portrait) {
    .content-container {
        padding: 0;
        max-width: none;
        margin: 0;
    }

    .header-title{
        display: none;     
    }
    
    main {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 0;
        scroll-snap-type: y mandatory;
    }    

    .page-header {
        padding: 16px;
        background: transparent;
        /*top: 16px;*/
        left: 0;
        right: 0;
        position: fixed;
    }

    .filter-tabs {
        justify-content: center;
        overflow-x: auto;
        padding-bottom: 8px;
        gap: 8px;
    }

    .filter-tab {
        padding: 8px 16px;
        font-size: 0.9rem;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .gallery {
        display: flex;
        flex-direction: column;
        width: 100%;
        min-height: 100%;
    }

    .gallery-item {
        width: 100%;
        height: 100vh;
        border-radius: 0;
        margin: 0;
        scroll-snap-align: start;
        flex-shrink: 0;
    }

    .gallery-item img {
        border-radius: 0;
    }

    .mobile-gallery {
        display: none;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterTabs = document.querySelectorAll('.filter-tab');
    const galleryItems = document.querySelectorAll('.gallery-item');

    function filterGallery(category) {
        galleryItems.forEach(item => {
            if (category === 'todas' || item.dataset.category === category) {
                item.classList.remove('hidden');
                item.style.display = 'block';
            } else {
                item.classList.add('hidden');
                item.style.display = 'none';
            }
        });
    }

    function updateActiveTab(activeTab) {
        filterTabs.forEach(tab => {
            tab.classList.remove('active');
        });
        activeTab.classList.add('active');
    }

    filterTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            const filter = this.dataset.filter;
            updateActiveTab(this);
            filterGallery(filter);
        });
    });

    // Initialize with "Todas" selected
    filterGallery('todas');
});
</script>
