<style>
    .video-landing-main {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #000;
    }

    .video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .background-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .content-overlay {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        width: 100%;
    }

    .navigation-buttons {
        display: flex;
        gap: 2rem;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        margin-top: -10vh;
    }

    .nav-button {
        background: rgba(255, 255, 255, 0.1);
        border: 4px solid rgba(255, 255, 255, 0.8);
        border-radius: 20px;
        padding: 2.5rem 2rem;
        color: white;
        font-family: "Poppins", sans-serif;
        font-size: 1.4rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.2rem;
        min-width: 200px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .nav-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transition: left 0.6s ease;
    }

    .nav-button:hover::before {
        left: 100%;
    }

    .nav-button:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 1);
        transform: translateY(-6px) scale(1.02);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(20px);
    }

    .nav-button:active {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .nav-button-icon {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nav-button-icon svg {
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    }

    /* Responsive design */
    @media (max-width: 1000px) and (orientation: portrait) {
        .navigation-buttons {
            flex-direction: column;
            gap: 1.5rem;
        }

        .nav-button {
            min-width: 200px;
            padding: 1.5rem 1rem;
            font-size: 1rem;
        }

        .nav-button-icon svg {
            width: 40px;
            height: 40px;
        }
    }

    @media (max-width: 1000px) and (orientation: landscape) {
        .navigation-buttons {
            flex-direction: row;
            gap: 1rem;
            margin-top: -5vh;
        }

        .nav-button {
            min-width: 140px;
            padding: 1rem 0.8rem;
            font-size: 0.8rem;
            gap: 0.8rem;
        }

        .nav-button-icon svg {
            width: 32px;
            height: 32px;
        }
    }

    @media (max-width: 480px) and (orientation: portrait) {
        .navigation-buttons {
            gap: 1rem;
            padding: 0 1rem;
            flex-direction: column;
        }

        .nav-button {
            min-width: 160px;
            padding: 1.2rem 0.8rem;
            font-size: 0.9rem;
        }

        .nav-button-icon svg {
            width: 36px;
            height: 36px;
        }
    }

    @media (max-width: 480px) and (orientation: landscape) {
        .navigation-buttons {
            flex-direction: row;
            gap: 0.8rem;
            padding: 0 0.5rem;
            margin-top: -3vh;
        }

        .nav-button {
            min-width: 100px;
            padding: 0.8rem 0.5rem;
            font-size: 0.7rem;
            gap: 0.5rem;
        }

        .nav-button-icon svg {
            width: 28px;
            height: 28px;
        }
    }
</style>

<script type="module">
    document.addEventListener('DOMContentLoaded', function() {
        const urbanizacionBtn = document.getElementById('urbanizacionBtn');
        const acabadosBtn = document.getElementById('acabadosBtn');
        const ubicacionBtn = document.getElementById('ubicacionBtn');

        urbanizacionBtn.addEventListener('click', () => {
            window.location.href = '/main-landing';
        });

        acabadosBtn.addEventListener('click', () => {
            window.location.href = '/acabados';
        });

        ubicacionBtn.addEventListener('click', () => {
            window.location.href = '/ubicacion';
        });
    });
</script>