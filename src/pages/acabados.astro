---
import Layout from "../layouts/Layout.astro";

---


<Layout title="Acabados">
    <main>
            <header class="page-header">
                <h1 class="header-title">Acabados</h1>
                <div class="filter-tabs">
                    <button class="filter-tab" data-filter="pavimento">Pavimento</button>
                    <button class="filter-tab" data-filter="cocina">Cocina</button>
                    <button class="filter-tab" data-filter="baños">Baños</button>
                </div>

                <!-- Pavimento Sub-buttons -->
                <div class="pavimento-sub-buttons hidden" id="pavimento-sub-buttons">
                    <button class="sub-button active" data-pavimento="1">
                        <img src="/boton-1.webp" alt="Pavimento Option 1" />
                    </button>
                    <button class="sub-button" data-pavimento="2">
                        <img src="/boton-2.webp" alt="Pavimento Option 2" />
                    </button>
                    <button class="sub-button" data-pavimento="3">
                        <img src="/boton-3.webp" alt="Pavimento Option 3" />
                    </button>
                </div>

                <!-- Cocina Sub-buttons -->
                <div class="cocina-sub-buttons hidden" id="cocina-sub-buttons">
                    <button class="sub-button active" data-cocina="1">
                        <img src="/boton-1.webp" alt="Cocina Option 1" />
                    </button>
                    <button class="sub-button" data-cocina="2">
                        <img src="/boton-2.webp" alt="Cocina Option 2" />
                    </button>
                    <button class="sub-button" data-cocina="3">
                        <img src="/boton-3.webp" alt="Cocina Option 3" />
                    </button>
                </div>
            </header>

            <section class="gallery" id="gallery">
                <div class="gallery-item" data-category="pavimento" data-pavimento="1">
                    <img src="/pavimento-1.webp"/>
                </div>
                <div class="gallery-item" data-category="pavimento" data-pavimento="2">
                    <img src="/pavimento-2.webp"/>
                </div>
                <div class="gallery-item" data-category="pavimento" data-pavimento="3">
                    <img src="/pavimento-3.webp"/>
                </div>
                                        

                <div class="gallery-item" data-category="cocina" data-cocina="1">
                    <img src="/cocina-1.webp"/>
                </div>
                <div class="gallery-item" data-category="cocina" data-cocina="2">
                    <img src="/cocina-2.webp"/>
                </div>
                <div class="gallery-item" data-category="cocina" data-cocina="3">
                    <img src="/cocina-3.webp"/>
                </div>
                
                <div class="gallery-item" data-category="baños">
                    <img src="/Baño-1.webp"/>
                </div>
                <div class="gallery-item" data-category="baños">
                    <img src="/Baño-2.webp"/>
                </div>



            </section>

            <section class="mobile-gallery" id="mobile-gallery">

                <div class="gallery-item" data-category="pavimento" data-pavimento="1">
                    <img src="/pavimento-1.webp"/>
                </div>
                <div class="gallery-item" data-category="pavimento" data-pavimento="2">
                    <img src="/pavimento-2.webp"/>
                </div>
                <div class="gallery-item" data-category="pavimento" data-pavimento="3">
                    <img src="/pavimento-3.webp"/>
                </div>
                                        

                <div class="gallery-item" data-category="cocina" data-cocina="1">
                    <img src="/cocina-1.webp"/>
                </div>
                <div class="gallery-item" data-category="cocina" data-cocina="2">
                    <img src="/cocina-2.webp"/>
                </div>
                <div class="gallery-item" data-category="cocina" data-cocina="3">
                    <img src="/cocina-3.webp"/>
                </div>
                
                <div class="gallery-item" data-category="baños">
                    <img src="/Baño-1.webp"/>
                </div>
                <div class="gallery-item" data-category="baños">
                    <img src="/Baño-2.webp"/>
                </div>

            </section>
    </main>
</Layout>



<style>
body {
    overflow: hidden;
}

main {
    position: fixed;
    top: 0;
    left: 280px;
    width: calc(100vw - 280px);
    height: 100vh;
    overflow: hidden;
    background-color: hsl(240, 15%, 17%);
    padding: 0;
}

.header-title{
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0px 0;
    padding: 0;
    text-align: center;        
}

.content-container {
    padding: 40px;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
}

.page-header {
    position: fixed;
    /*top: 20px;*/
    left: 280px;
    right: 0;
    z-index: 10;
    text-align: center;
    padding: 20px;
    background: transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.filter-tabs {
    display: flex;
    gap: 8px;
    justify-content: center;
}

.pavimento-sub-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-top: 16px;
}

.pavimento-sub-buttons.hidden {
    display: none;
}

.cocina-sub-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-top: 16px;
}

.cocina-sub-buttons.hidden {
    display: none;
}

.sub-button {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 3px solid transparent;
    background: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
    overflow: hidden;
}

.sub-button.active {
    border-color: hsl(230, 100%, 69%);
}

.sub-button:hover {
    border-color: hsl(230, 100%, 75%);
    transform: scale(1.05);
}

.sub-button img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}

.filter-tab {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    background-color: hsl(240, 15%, 30%);
    color: white;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-tab:hover {
    background-color: hsl(240, 15%, 35%);
}

.filter-tab.active {
    background-color: hsl(230, 100%, 69%);
    color: white;
}

.gallery {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.gallery-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 0;
    overflow: hidden;
}

.gallery-item.hidden {
    display: none;
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    display: block;
    border-radius: 0;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
}

.mobile-gallery {
    display: none;
}

@media (orientation: portrait) {
    .content-container {
        padding: 0;
        max-width: none;
        margin: 0;
    }

    .header-title{
        display: none;     
    }
    
    main {
        position: relative !important;
        top: auto !important;
        left: auto !important;
        width: 100vw !important;
        height: calc(100dvh - 80px) !important;
        overflow: auto !important;
        padding: 0 !important;
        display: flex !important;
        flex-direction: column !important;
    }

    .page-header {
        position: relative !important;
        top: auto !important;
        left: auto !important;
        right: auto !important;
        z-index: auto !important;
        padding: 16px !important;
        margin-bottom: 0 !important;
        flex-shrink: 0 !important;
        background-color: hsl(240, 15%, 17%) !important;
        width: 100% !important;
        box-sizing: border-box !important;
    }

    .filter-tabs {
        justify-content: center;
        overflow-x: none;
        padding-bottom: 8px;
        gap: 8px;
    }

    .filter-tab {
        padding: 8px 16px;
        font-size: 0.9rem;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .pavimento-sub-buttons,
    .cocina-sub-buttons {
        margin-top: 12px;
        gap: 12px;
    }

    .sub-button {
        width: 50px;
        height: 50px;
    }

    .gallery {
        flex: 1 !important;
        display: flex !important;
        flex-direction: column !important;
        align-items: flex-start !important;
        justify-content: flex-start !important;
        padding: 4px 16px 8px 16px !important;
        position: relative !important;
        width: 100% !important;
        box-sizing: border-box !important;
        overflow: hidden !important;
    }

    .gallery-item {
        width: 100% !important;
        height: 50vh !important;
        border-radius: 12px !important;
        overflow: hidden !important;
        position: relative !important;
        box-sizing: border-box !important;
        margin: 0 !important;
    }

    .gallery-item img {
        width: 100% !important;
        height: 100% !important;
        object-fit: cover !important;
        object-position: center center !important;
        border-radius: 12px !important;
        display: block !important;
    }

    .mobile-gallery {
        display: none;
    }

    /* Special handling for baños - show multiple images in scroll */
    .gallery.banos-mobile {
        justify-content: flex-start !important;
        overflow-y: auto !important;
        gap: 16px !important;
        padding: 8px 16px !important;
    }

    .gallery.banos-mobile .gallery-item {
        flex-shrink: 0 !important;
        margin-bottom: 0 !important;
        height: 60vh !important;
        max-height: none !important;
    }

    .gallery.banos-mobile .gallery-item img {
        height: 100% !important;
        object-fit: cover !important;
        max-height: none !important;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterTabs = document.querySelectorAll('.filter-tab');
    const galleryItems = document.querySelectorAll('.gallery-item');
    const pavimentoSubButtons = document.getElementById('pavimento-sub-buttons');
    const cocinaSubButtons = document.getElementById('cocina-sub-buttons');
    const pavimentoButtons = document.querySelectorAll('#pavimento-sub-buttons .sub-button');
    const cocinaButtons = document.querySelectorAll('#cocina-sub-buttons .sub-button');

    function filterGallery(category) {
        galleryItems.forEach(item => {
            if (item.dataset.category === category) {
                item.classList.remove('hidden');
                item.style.display = 'block';
            } else {
                item.classList.add('hidden');
                item.style.display = 'none';
            }
        });
    }

    function filterPavimentoImages(pavimentoType) {
        // Hide all gallery items first
        galleryItems.forEach(item => {
            item.classList.add('hidden');
            item.style.display = 'none';
        });

        // Show only the specific pavimento image
        const targetPavimentoItem = document.querySelector(`.gallery-item[data-category="pavimento"][data-pavimento="${pavimentoType}"]`);
        if (targetPavimentoItem) {
            targetPavimentoItem.classList.remove('hidden');
            targetPavimentoItem.style.display = 'block';
        }
    }

    function filterCocinaImages(cocinaType) {
        // Hide all gallery items first
        galleryItems.forEach(item => {
            item.classList.add('hidden');
            item.style.display = 'none';
        });

        // Show only the specific cocina image
        const targetCocinaItem = document.querySelector(`.gallery-item[data-category="cocina"][data-cocina="${cocinaType}"]`);
        if (targetCocinaItem) {
            targetCocinaItem.classList.remove('hidden');
            targetCocinaItem.style.display = 'block';
        }
    }

    function updateActiveTab(activeTab) {
        filterTabs.forEach(tab => {
            tab.classList.remove('active');
        });
        activeTab.classList.add('active');
    }

    function updateActivePavimentoButton(activeButton) {
        pavimentoButtons.forEach(button => {
            button.classList.remove('active');
        });
        activeButton.classList.add('active');
    }

    function updateActiveCocinaButton(activeButton) {
        cocinaButtons.forEach(button => {
            button.classList.remove('active');
        });
        activeButton.classList.add('active');
    }

    filterTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            const filter = this.dataset.filter;
            updateActiveTab(this);

            if (filter === 'pavimento') {
                // Hide cocina sub-buttons and show pavimento sub-buttons
                cocinaSubButtons.classList.add('hidden');
                pavimentoSubButtons.classList.remove('hidden');
                // Show only first pavimento image by default
                filterPavimentoImages('1');
                // Activate first pavimento sub-button
                if (pavimentoButtons.length > 0) {
                    updateActivePavimentoButton(pavimentoButtons[0]);
                }
            } else if (filter === 'cocina') {
                // Hide pavimento sub-buttons and show cocina sub-buttons
                pavimentoSubButtons.classList.add('hidden');
                cocinaSubButtons.classList.remove('hidden');
                // Show only first cocina image by default
                filterCocinaImages('1');
                // Activate first cocina sub-button
                if (cocinaButtons.length > 0) {
                    updateActiveCocinaButton(cocinaButtons[0]);
                }
            } else if (filter === 'baños') {
                // Hide both sub-buttons
                pavimentoSubButtons.classList.add('hidden');
                cocinaSubButtons.classList.add('hidden');
                // Add special class for baños mobile layout
                const gallery = document.getElementById('gallery');
                gallery.classList.add('banos-mobile');
                // Show regular filter
                filterGallery(filter);
            } else {
                // Hide both sub-buttons
                pavimentoSubButtons.classList.add('hidden');
                cocinaSubButtons.classList.add('hidden');
                // Remove special class
                const gallery = document.getElementById('gallery');
                gallery.classList.remove('banos-mobile');
                // Show regular filter
                filterGallery(filter);
            }
        });
    });

    // Handle pavimento sub-buttons
    pavimentoButtons.forEach(button => {
        button.addEventListener('click', function() {
            const pavimentoType = this.dataset.pavimento;
            updateActivePavimentoButton(this);
            filterPavimentoImages(pavimentoType);
        });
    });

    // Handle cocina sub-buttons
    cocinaButtons.forEach(button => {
        button.addEventListener('click', function() {
            const cocinaType = this.dataset.cocina;
            updateActiveCocinaButton(this);
            filterCocinaImages(cocinaType);
        });
    });

    // Initialize with "Pavimento" selected
    const pavimentoTab = document.querySelector('[data-filter="pavimento"]');
    if (pavimentoTab) {
        pavimentoTab.classList.add('active');
        pavimentoTab.click();
    }
});
</script>
