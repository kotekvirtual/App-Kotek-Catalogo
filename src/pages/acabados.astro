            </section>
    </main>
</Layout>



<style>
body {
    overflow: hidden;
}

main {
    overflow: auto;
    flex: 1;
    background-color: hsl(240, 15%, 17%);
    padding: 20px;
    width: 100%;
    margin: 0 auto;
}

.header-title{
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0px 0;
    padding: 0;
    text-align: center;        
}

.content-container {
    padding: 40px;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
}

.page-header {
    margin-bottom: 10px;
    text-align: center;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
}

.filter-tabs {
    display: flex;
    gap: 8px;
    justify-content: center;
}

.cocina-sub-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-top: 16px;
}

.cocina-sub-buttons.hidden {
    display: none;
}

.sub-button {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 3px solid transparent;
    background: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
    overflow: hidden;
}

.sub-button.active {
    border-color: hsl(230, 100%, 69%);
}

.sub-button:hover {
    border-color: hsl(230, 100%, 75%);
    transform: scale(1.05);
}

.sub-button img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}

.filter-tab {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    background-color: hsl(240, 15%, 30%);
    color: white;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-tab:hover {
    background-color: hsl(240, 15%, 35%);
}

.filter-tab.active {
    background-color: hsl(230, 100%, 69%);
    color: white;
}

.gallery {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 1080px;
    margin: 0 auto;
}

.gallery-item {
    border-radius: 12px;
    overflow: hidden;
}

.gallery-item.hidden {
    display: none;
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 12px;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
}

.mobile-gallery {
    display: none;
}

@media (orientation: portrait) {
    .content-container {
        padding: 0;
        max-width: none;
        margin: 0;
    }

    .header-title{
        display: none;     
    }
    
    main {
        height: calc(100dvh - 80px);
        overflow: auto;
        padding: 0;
    }    

    .page-header {
        padding: 16px;
        margin-bottom: 0;
        max-width: none;
        margin-left: 0;
        margin-right: 0;
    }

    .filter-tabs {
        justify-content: center;
        overflow-x: none;
        padding-bottom: 8px;
        gap: 8px;
    }

    .filter-tab {
        padding: 8px 16px;
        font-size: 0.9rem;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .gallery {
        max-width: none;
        margin: 0;
        gap: 16px;
        padding: 0 0 2em 0;
    }

    .gallery-item {
        height: 50vh;
        border-radius: 0;
        margin: 0 16px;
    }

    .gallery-item img {
        border-radius: 12px;
    }

    .mobile-gallery {
        display: none;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterTabs = document.querySelectorAll('.filter-tab');
    const galleryItems = document.querySelectorAll('.gallery-item');
    const cocinaSubButtons = document.getElementById('cocina-sub-buttons');
    const subButtons = document.querySelectorAll('.sub-button');

    function filterGallery(category) {
        galleryItems.forEach(item => {
            if (category === 'todas' || item.dataset.category === category) {
                item.classList.remove('hidden');
                item.style.display = 'block';
            } else {
                item.classList.add('hidden');
                item.style.display = 'none';
            }
        });
    }

    function filterCocinaImages(cocinaType) {
        // Hide all gallery items first
        galleryItems.forEach(item => {
            item.classList.add('hidden');
            item.style.display = 'none';
        });

        // Show only the specific cocina image
        const targetCocinaItem = document.querySelector(`.gallery-item[data-category="cocina"][data-cocina="${cocinaType}"]`);
        if (targetCocinaItem) {
            targetCocinaItem.classList.remove('hidden');
            targetCocinaItem.style.display = 'block';
        }
    }

    function updateActiveTab(activeTab) {
        filterTabs.forEach(tab => {
            tab.classList.remove('active');
        });
        activeTab.classList.add('active');
    }

    function updateActiveSubButton(activeButton) {
        subButtons.forEach(button => {
            button.classList.remove('active');
        });
        activeButton.classList.add('active');
    }

    filterTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            const filter = this.dataset.filter;
            updateActiveTab(this);

            if (filter === 'cocina') {
                // Show cocina sub-buttons
                cocinaSubButtons.classList.remove('hidden');
                // Show only first cocina image by default
                filterCocinaImages('1');
                // Activate first sub-button
                if (subButtons.length > 0) {
                    updateActiveSubButton(subButtons[0]);
                }
            } else {
                // Hide cocina sub-buttons
                cocinaSubButtons.classList.add('hidden');
                // Show regular filter
                filterGallery(filter);
            }
        });
    });

    // Handle cocina sub-buttons
    subButtons.forEach(button => {
        button.addEventListener('click', function() {
            const cocinaType = this.dataset.cocina;
            updateActiveSubButton(this);
            filterCocinaImages(cocinaType);
        });
    });

    // Initialize with "Todas" selected
    filterGallery('todas');
});
</script>
