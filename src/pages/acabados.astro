                    <img src="/General-4.webp"/>
                </div>
                <div class="gallery-item" data-category="general">
                    <img src="/General-5.webp"/>
                </div>
                <div class="gallery-item" data-category="general">
                    <img src="/General-6.webp"/>
                </div>
                <div class="gallery-item" data-category="general">
                    <img src="/General-7.webp"/>
                </div>                                        

                <div class="gallery-item" data-category="cocina" data-cocina="1">
                    <img src="/cocina-1.webp"/>
                </div>
                <div class="gallery-item" data-category="cocina" data-cocina="2">
                    <img src="/cocina-2.webp"/>
                </div>
                <div class="gallery-item" data-category="cocina" data-cocina="3">
                    <img src="/cocina-3.webp"/>
                </div>
                
                <div class="gallery-item" data-category="baños">
                    <img src="/Baño-1.webp"/>
                </div>
                <div class="gallery-item" data-category="baños">
                    <img src="/Baño-2.webp"/>
                </div>                                  




            </section>

