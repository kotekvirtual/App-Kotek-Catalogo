---
import Layout from "../layouts/Layout.astro";
---


<Layout title="Fichas Comerciales">
    <main>
		<section class="grid-fichas">
			<img src="/viviendaA.webp" id="botonA" class="boton-ficha" alt="ficha comercial A">
			<img src="/viviendaB.webp" id="botonB" class="boton-ficha" alt="ficha comercial B">
			<img src="/viviendaC.webp" id="botonC" class="boton-ficha" alt="ficha comercial C">
			<img src="/viviendaD.webp" id="botonD" class="boton-ficha" alt="ficha comercial D">
			<img src="/viviendaE.webp" id="botonE" class="boton-ficha" alt="ficha comercial E">
			<img src="/viviendaF.webp" id="botonF" class="boton-ficha" alt="ficha comercial F">	
		</section>
		<div>
			<dialog id="fichaModalA">
				<img src="/viviendaA.webp" alt="ficha comercial" class="modalImage">
			</dialog>
			<dialog id="fichaModalB">
				<img src="/viviendaB.webp" alt="ficha comercial" class="modalImage">
			</dialog>
			<dialog id="fichaModalC">
				<img src="/viviendaC.webp" alt="ficha comercial" class="modalImage">
			</dialog>
			<dialog id="fichaModalD">
				<img src="/viviendaD.webp" alt="ficha comercial" class="modalImage">
			</dialog>
			<dialog id="fichaModalE">
				<img src="/viviendaE.webp" alt="ficha comercial" class="modalImage">
			</dialog>
			<dialog id="fichaModalF">
				<img src="/viviendaF.webp" alt="ficha comercial" class="modalImage">
			</dialog>
			
		  </div>
    </main>
</Layout>



<style>



	main {
		margin: 0;
		padding: 0;
		width: 100%;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin: 0;
		padding: 0;
	}
	section{
		height: calc(100vh - 48px);
		margin: 24px;
		border-radius: 12px;
		background-position: 50% 70%;
		overflow: visible;
		overflow-x: hidden;
	}
	.grid-fichas{
		padding-top: 24px;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		grid-row-gap: 24px;
		justify-items: center;
	}
	.boton-ficha{
		width: 300px;
		border: 1px solid hsl(240, 15%, 97%);
		border-radius: 12px;
	}
	dialog{
	height: calc(100vh - 16px);
	border: none;
	
}
dialog::backdrop{
	background-color: #26263399;
}
.modalImage{
	height: 99%;
	margin: 0px;
	border: none;
}
</style>

