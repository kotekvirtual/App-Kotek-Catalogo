}

.navlink {
    display: flex;
    color: white;
    text-decoration: none;
    padding: 12px 24px;
    align-items: center;
    font-size: 0.95rem;
    transition: background-color 0.2s ease;
}

.navlink svg {
    padding-right: 8px;
}

.hamburger-link {
    display: flex;
    color: white;
    text-decoration: none;
    padding: 4px;
    border-radius: 12px;
    align-items: center;
}

.hamburger-link svg {
    padding-right: 8px;
}

.menu-sections {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 32px;
    width: 100%;
    overflow-y: auto;
    flex: 1;
    padding-bottom: 24px;
}

.menu-section {
    display: flex;
