<script type="module">
const hamburgerMenu = document.querySelector(".hamburger-dialog")
const hamburgerIcon = document.querySelector(".hamburger-icon")

hamburgerIcon.addEventListener("click",()=>{
	if (hamburgerMenu.classList.contains("hamburger-open")){
		hamburgerMenu.classList.remove("hamburger-open")
		hamburgerIcon.classList.remove("hamburger-icon-rotated")

	}
	else{
		hamburgerMenu.classList.add("hamburger-open")
		hamburgerIcon.classList.add("hamburger-icon-rotated")
	}
})

const contactButton = document.getElementById('contact-button');
const contactModal = document.getElementById('contact-modal');
const closeButton = contactModal.querySelector('.closeButton');

contactButton.addEventListener('click', () => {
	contactModal.showModal();
});

closeButton.addEventListener('click', () => {
	contactModal.close();
});

contactModal.addEventListener('click', (event) => {
	if (event.target === contactModal) {
		contactModal.close();
	}
});
</script>