@media (orientation: portrait) {
    body {
        flex-direction: column;
        overflow: hidden;
    }

    .fixed-navbar {
        height: 80px;
        flex-direction: row;
        width: 100vw;
        align-items: center;
        padding: 0;
        border-bottom: solid 1px hsl(240, 15%, 37%);
        justify-content: space-between;
